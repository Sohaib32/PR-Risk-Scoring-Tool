{
  "name": "pr-risk-scoring-tool",
  "version": "1.0.0",
  "description": "An AI-powered tool that analyzes pull request diffs and produces risk assessments with actionable reviewer guidance",
  "main": "dist/index.js",
  "bin": {
    "pr-risk-analyzer": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node scripts/run.js --help",
    "dev": "ts-node src/cli.ts",
    "analyze": "ts-node src/cli.ts",
    "analyze:uncommitted": "node scripts/run.js --uncommitted",
    "analyze:file": "node scripts/run.js --file",
    "test": "npm run build && node --test tests",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "pr",
    "risk",
    "analysis",
    "code-review",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "groq-sdk": "^0.37.0",
    "openai": "^4.20.0",
    "simple-git": "^3.20.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/node": "^20.19.27",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sohaib32/PR-Risk-Scoring-Tool.git"
  },
  "type": "commonjs",
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/Sohaib32/PR-Risk-Scoring-Tool/issues"
  },
  "homepage": "https://github.com/Sohaib32/PR-Risk-Scoring-Tool#readme"
}
